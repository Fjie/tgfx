{
    "compilerOptions": {
      "lib": ["ES5", "ES6", "DOM", "DOM.Iterable"],
      "target": "ES2017",
      "module": "esnext", // 更改模块设置以支持动态导入
      "allowJs": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "strict": true,
      "outDir": "figma/js",
      "baseUrl": ".", 
      "resolveJsonModule": true
    },
    "include": ["figma/ts/**/*.ts"]
  }